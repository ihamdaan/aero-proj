<!DOCTYPE html>
<html>
<head>
  <title>Personalized Content</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .glass {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.3);
    }
    .glass-dark {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.5);
    }
    .fade-in {
      animation: fadeIn 0.3s ease-in;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .loader {
      border: 4px solid rgba(255, 255, 255, 0.3);
      border-top: 4px solid #3b82f6;
      border-radius: 50%;
      width: 36px;
      height: 36px;
      animation: spin 1s linear infinite;
      margin: 0 auto;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>

<body class="min-h-screen">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <button onclick="history.back()" class="text-lg text-gray-400 font-semibold hover:text-gray-500">‚Üê Back</button>
    <div class="mb-8 text-center">
      <p class="text-gray-800 font-semibold text-3xl">Generate Your Personalized Blogs Here</p>
    </div>

    <!-- Blog Input Section -->
    <div id="blog-inputs" class="space-y-6">
      <div class="glass-dark rounded-2xl shadow-lg p-6 fade-in blog-input">
        <h3 class="text-xl font-semibold mb-4 text-gray-800">Blog 1</h3>
        <input type="text" placeholder="Title (**required)" required class="w-full mb-3 p-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-blue-400">
        <textarea placeholder="Description (**required)" required class="w-full mb-3 p-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
        <input type="number" placeholder="Word Count (50-60) (**required)" min="50" max="60" required class="w-full p-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-blue-400">
      </div>
    </div>

    <div class="flex justify-between items-center mt-4">
      <button id="add-blog" class="bg-white text-blue-700 border border-2 border-blue-700  px-4 py-2 rounded-full shadow-lg hover:text-white hover:bg-blue-700 transition">
        + Add Another Blog
      </button>
      <button id="generate-btn" class="bg-white text-green-700 border border-2 border-green-700 px-6 py-2 rounded-full shadow-lg hover:text-white hover:bg-green-700 transition">
        Generate
      </button>
    </div>

    <!-- Loader Section -->
    <div id="loading-section" class="hidden mt-8 text-center">
      <div class="loader"></div>
      <p id="loader-text" class="mt-4 text-gray-600">Your content is being generated...</p>
    </div>

    <!-- Output Section -->
    <div id="output-section" class="mt-10 space-y-6"></div>
  </div>

  <script>
    const maxBlogs = 5;
    let blogCount = 1;
    const addBtn = document.getElementById("add-blog");
    const generateBtn = document.getElementById("generate-btn");
    const inputsContainer = document.getElementById("blog-inputs");
    const loaderSection = document.getElementById("loading-section");
    const loaderText = document.getElementById("loader-text");
    const outputSection = document.getElementById("output-section");

    // Add new blog input section
    addBtn.addEventListener("click", () => {
      if (blogCount >= maxBlogs) return alert("You can only add up to 5 blogs.");
      blogCount++;
      const newBlock = document.createElement("div");
      newBlock.className = "glass-dark rounded-2xl shadow-lg p-6 fade-in blog-input";
      newBlock.innerHTML = `
        <h3 class="text-xl font-semibold mb-4 text-gray-800">Blog ${blogCount}</h3>
        <input type="text" placeholder="Title" required class="w-full mb-3 p-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-blue-400">
        <textarea placeholder="Description" required class="w-full mb-3 p-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
        <input type="number" placeholder="Word Count (50-60)" min="50" max="60" required class="w-full p-3 rounded-lg border focus:outline-none focus:ring-2 focus:ring-blue-400">
      `;
      inputsContainer.appendChild(newBlock);
    });

    // Alternate loader messages
    function alternateLoaderText() {
      let toggle = true;
      return setInterval(() => {
        loaderText.textContent = toggle
          ? "It may take a while since the LLM is open source..."
          : "Your content is being generated, please wait...";
        toggle = !toggle;
      }, 5000);
    }

    // Generate blogs
    generateBtn.addEventListener("click", async () => {
      const blogs = Array.from(document.querySelectorAll(".blog-input")).map(div => {
        const [title, description, wordCount] = div.querySelectorAll("input, textarea");
        return {
          title: title.value.trim(),
          description: description.value.trim(),
          word_length: parseInt(wordCount.value.trim(), 10)
        };
      });

      if (blogs.some(b => !b.title || !b.description || !b.word_length))
        return alert("All fields are required for each blog.");

      loaderSection.classList.remove("hidden");
      outputSection.innerHTML = "";
      const loaderInterval = alternateLoaderText();

      try {
        const response = await fetch("/personalizedcontent/generate", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ items: blogs })
        });
        const data = await response.json();

        loaderSection.classList.add("hidden");
        clearInterval(loaderInterval);

        for (const result of data.results) {
          const blogDiv = document.createElement("div");
          blogDiv.className = "blog-card glass-dark rounded-2xl shadow-lg p-6 fade-in";
          blogDiv.innerHTML = `
            <h2 class="text-2xl font-bold text-gray-800 mb-3">${result.title}</h2>
            <p class="text-gray-600 leading-relaxed">${result.content}</p>
            <div class="mt-4 text-sm text-gray-500 font-semibold">Word Count: ${result.word_count_doc}</div>
          `;
          outputSection.appendChild(blogDiv);
          await new Promise(res => setTimeout(res, 1000)); // Show one by one
        }

      } catch (err) {
        clearInterval(loaderInterval);
        loaderSection.classList.add("hidden");
        alert("Error generating blogs. Please try again.");
        console.error(err);
      }
    });
  </script>
</body>
</html>
